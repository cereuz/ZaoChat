<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <com.zao.zaochat.widget.CircleImageView
        android:id="@+id/civ_bubble_user_icon"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/header"
        app:border_color="#E0E0E0"
        app:border_width="1dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="16dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_bubble_user_name"
                android:text="傻巴度"
                android:textSize="9dp"
                android:layout_marginTop="2dp"
                android:layout_marginLeft="9dp"
                android:layout_marginRight="4dp"
                android:layout_width="wrap_content"
                android:layout_height="16dp" />
            <ImageView
                android:id="@+id/iv_bubble_user_sex"
                android:src="@drawable/woman"
                android:layout_width="6dp"
                android:layout_height="6dp"
                android:layout_gravity="center"/>
            <TextView
                android:id="@+id/tv_bubble_user_time"
                android:text="2016-12-15 14:36"
                android:textSize="9dp"
                android:layout_marginTop="2dp"
                android:layout_marginLeft="9dp"
                android:layout_marginRight="4dp"
                android:layout_width="wrap_content"
                android:layout_height="16dp" />

        </LinearLayout>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_bubble_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:background="@drawable/bg_tv"
                android:paddingBottom="6dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:paddingTop="6dp"
                android:text="111"
                android:textColor="#FFFFFF" />
            <ImageView
                android:id="@+id/iv_bubble_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="6dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:paddingTop="6dp"/>
        </FrameLayout>

    </LinearLayout>



</LinearLayout>